
# universal unix aliases

# navigation
alias ..='cd ..'
alias xx="exit"
alias c='clear'

# utilities
alias ds="du -cb --si -d 1"
alias cnt="ls | wc -l"

# git
alias gs='git status'

# docker
alias dc='docker compose'
alias dr='docker compose stop && docker compose up -d && docker compose logs -f'
alias drb='docker compose stop && docker compose rm -vf && docker compose up -d && docker compose logs -f'

# golang
alias gotest='go test ./...'
alias gobench='go test -bench=.'

# external scripts
alias gogh='bash -c  "$(curl -sLo- https://git.io/vQgMr)"'
